{
    "name": "Volta",
    "id": "volta",
    "version": "1.0.0",
    "description": "Installs Volta, the hassle-free JavaScript tool manager",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select or enter a version."
        },
        "installGlobalNode": {
            "type": "string",
            "proposals": ["true", "false"],
            "default": "false",
            "description": "Install the latest LTS version of Node automatically."
        },
        "skipSetup": {
            "type": "string",
            "proposals": ["true", "false"],
            "default": "false",
            "description": "Should Volta modify path, etc."
        }
    }
}
